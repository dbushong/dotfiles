[alias]
	ci = commit
	co = checkout
	st = status
	br = branch
	ls = ls-files
	ppush = !git pull && git push
[color]
	ui = true
[color "grep"]
	match = normal bold
[color "status"]
	added = green bold
[branch]
	autosetuprebase = always
[push]
	default = tracking
[mergetool]
	prompt = false
[merge]
        tool = vimdiff
[remote "origin"]
	fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
