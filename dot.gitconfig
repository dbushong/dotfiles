[alias]
	ci = commit
	co = checkout
	st = status
	br = branch
	ls = ls-files
	ppush = !git pull && git push
[color]
	ui = true
[color "grep"]
	match = normal bold
[color "status"]
	added = green bold
[branch]
	autosetuprebase = always
[push]
	default = tracking
[diff]
	tool = meld
[difftool]
	prompt = false
[merge]
	conflictstyle = diff3
[remote "origin"]
	fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
